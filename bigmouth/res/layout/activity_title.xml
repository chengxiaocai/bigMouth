<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mTitleContainer"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/orange_normal" >

    <Button
        android:id="@+id/leftBtn"
        android:layout_width="@dimen/title_left_btn_width"
        android:layout_height="@dimen/title_left_btn_height"
     
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/title_left_btn_margin_left"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="大嘴外教"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/title_btn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/mRightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/title_right_btn_margin_right" >

            <Button
                android:id="@+id/rightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/bg_title_right_btn"
                android:paddingBottom="@dimen/title_text_padding_bottom"
                android:paddingLeft="@dimen/title_text_padding_left"
                android:paddingRight="@dimen/title_text_padding_right"
                android:paddingTop="@dimen/title_text_padding_top"
                android:textSize="@dimen/textsize_normal"
                android:visibility="invisible" />

            <Button
                android:id="@+id/userCenterBtn"
                android:layout_width="@dimen/title_right_btn_width"
                android:layout_height="@dimen/title_right_btn_height"
                android:visibility="invisible" />

            <Button
                android:id="@+id/moreBtn"
                android:layout_width="@dimen/title_more_btn_width"
                android:layout_height="@dimen/title_more_btn_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/more"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:id="@+id/mTitleView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mRightContainer"
            android:layout_toRightOf="@id/leftBtn"
            android:gravity="center"
            android:singleLine="true"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </Button>

</RelativeLayout>